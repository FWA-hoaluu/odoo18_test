<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="email_template_certificate_expiry" model="mail.template">
        <field name="name">Certificate Expiry Notification</field>
        <field name="email_from">${(object.company_id.email or 'noreply@yourcompany.com')|safe}</field>
        <field name="subject">Chứng chỉ ${object.name} sắp hết hạn</field>
        <field name="model_id" ref="model_g_employee_certification"/>
        <field name="body_html">
            <![CDATA[
            <p>Xin chào ${object.employee_id.name},</p>
            <p>Chứng chỉ <strong>${object.name}</strong> của bạn sẽ hết hạn vào ngày <strong>${object.date_end}</strong>.</p>
            <p>Vui lòng kiểm tra và gia hạn nếu cần.</p>
            <p>Trân trọng,<br/>${object.company_id.name}</p>
            ]]>
        </field>
    </record>
</odoo>
