        <field name="name">Check Certificate Expiry</field>
        <field name="model_id" ref="model_g_employee_certification"/>
        <field name="state">code</field>
        <field name="code">model._send_certificate_expiry_notification()</field>
        <field name="user_id" ref="base.user_root"/>
