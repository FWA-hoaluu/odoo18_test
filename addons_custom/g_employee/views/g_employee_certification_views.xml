<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_g_employee_certification_form" model="ir.ui.view">
            <field name="name">g.employee.certification.form</field>
            <field name="model">g.employee.certification</field>
            <field name="arch" type="xml">
                <form string="Employee Certification">
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="employee_id"/>
                        <fied name="attachment_ids" widget="many2many_binary"/>
                    </group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="cer_type"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_g_employee_certification" model="ir.actions.act_window">
            <field name="name">Employee Certification</field>
            <field name="res_model">g.employee.certification</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="menu_g_employee_certification" name="Certification" parent="menu_hr_root" sequence="10"/>
    </data>
</odoo>